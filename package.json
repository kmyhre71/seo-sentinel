{
    "name": "seo-sentinel",
    "version": "1.0.0",
    "description": "An intelligent Chrome extension for comprehensive SEO analysis and optimization",
    "main": "src/background/background.js",
    "scripts": {
      "dev": "webpack --mode development --watch",
      "build": "webpack --mode production",
      "test": "jest",
      "test:watch": "jest --watch",
      "lint": "eslint src/**/*.js",
      "lint:fix": "eslint src/**/*.js --fix",
      "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
      "zip": "node scripts/create-zip.js",
      "clean": "rimraf dist",
      "prebuild": "npm run clean",
      "postbuild": "npm run zip"
    },
    "keywords": [
      "seo",
      "chrome-extension",
      "web-optimization",
      "marketing",
      "analytics"
    ],
    "author": "SEO Sentinel Team",
    "license": "MIT",
    "devDependencies": {
      "@babel/core": "^7.23.0",
      "@babel/preset-env": "^7.22.20",
      "@testing-library/jest-dom": "^6.1.3",
      "@types/chrome": "^0.0.246",
      "@types/jest": "^29.5.5",
      "archiver": "^6.0.1",
      "babel-loader": "^9.1.3",
      "copy-webpack-plugin": "^11.0.0",
      "css-loader": "^6.8.1",
      "css-minimizer-webpack-plugin": "^5.0.1",
      "eslint": "^8.50.0",
      "eslint-config-prettier": "^9.0.0",
      "eslint-plugin-jest": "^27.4.2",
      "eslint-plugin-prettier": "^5.0.0",
      "html-webpack-plugin": "^5.5.3",
      "jest": "^29.7.0",
      "jest-chrome": "^0.8.0",
      "jest-environment-jsdom": "^29.7.0",
      "mini-css-extract-plugin": "^2.7.6",
      "prettier": "^3.0.3",
      "rimraf": "^5.0.5",
      "style-loader": "^3.3.3",
      "terser-webpack-plugin": "^5.3.9",
      "webpack": "^5.88.2",
      "webpack-cli": "^5.1.4"
    },
    "dependencies": {
      "chart.js": "^4.4.0",
      "dompurify": "^3.0.6",
      "marked": "^9.1.0"
    },
    "jest": {
      "testEnvironment": "jsdom",
      "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
      ],
      "moduleNameMapper": {
        "\\.(css|less|scss|sass)$": "<rootDir>/tests/__mocks__/styleMock.js",
        "\\.(gif|ttf|eot|svg)$": "<rootDir>/tests/__mocks__/fileMock.js"
      },
      "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/*.test.js"
      ],
      "coverageThreshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": 80
        }
      }
    },
    "eslintConfig": {
      "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "webextensions": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
      ],
      "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
      },
      "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-console": ["warn", { "allow": ["warn", "error"] }]
      }
    },
    "prettier": {
      "printWidth": 100,
      "tabWidth": 2,
      "useTabs": false,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true,
      "arrowParens": "avoid"
    },
    "browserslist": [
      "last 2 Chrome versions"
    ]
  }